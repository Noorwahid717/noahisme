<!-- View Transition Loading Indicator -->
<div class="view-transition-loader" data-loader aria-live="polite" aria-busy="true">
  <div class="loader__inner">
    <span class="sr-only">Memuat halaman...</span>
    <div class="loader__letters" aria-hidden="true">
      {
        "noahisme".split("").map((letter, index) => (
          <span class="loader__letter" style={`--index:${index}`}>
            {letter}
          </span>
        ))
      }
    </div>
  </div>
</div>

<script>
  document.addEventListener("astro:before-preparation", () => {
    const loader = document.querySelector("[data-loader]");
    if (loader) {
      loader.classList.add("is-visible");
    }
  });

  document.addEventListener("astro:after-swap", () => {
    const loader = document.querySelector("[data-loader]");
    if (loader) {
      loader.classList.remove("is-visible");
    }
  });
</script>

<style>
  .view-transition-loader {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: none;
    place-items: center;
    background: radial-gradient(circle at center, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98));
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    pointer-events: none;
  }

  .view-transition-loader.is-visible {
    display: grid;
    opacity: 1;
    pointer-events: auto;
  }

  .loader__inner {
    display: grid;
    gap: 0.75rem;
    padding: 1.5rem 2rem;
    border-radius: 24px;
    border: 1px solid rgba(148, 163, 184, 0.2);
    background: rgba(2, 6, 23, 0.6);
    backdrop-filter: blur(12px);
  }

  .loader__letters {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    font-family: var(--font-heading, "Inter", sans-serif);
    font-size: clamp(1.5rem, 2vw + 1rem, 2.5rem);
    color: #f8fafc;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .loader__letter {
    display: inline-block;
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    animation: letterPulse 1s cubic-bezier(0.16, 1, 0.3, 1) infinite;
    animation-delay: calc(var(--index) * 0.08s);
  }

  @keyframes letterPulse {
    0%,
    100% {
      opacity: 0.3;
      transform: translateY(0) scale(0.95);
    }
    50% {
      opacity: 1;
      transform: translateY(-8px) scale(1.05);
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .loader__letter {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  /* Mobile optimization */
  @media (max-width: 768px) {
    .loader__inner {
      backdrop-filter: blur(8px);
      padding: 1.25rem 1.5rem;
    }

    .loader__letters {
      gap: 0.4rem;
      font-size: 1.5rem;
    }
  }
</style>
