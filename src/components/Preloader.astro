<div class="preloader" data-preloader aria-live="polite">
  <div class="preloader__inner">
    <span class="preloader__tag">loading</span>
    <span class="sr-only">Memuat pengalaman Mohammad Noor Wahid</span>
    <div class="preloader__letters" aria-hidden="true">
      {
        "noahisme".split("").map((letter, index) => (
          <span class="preloader__letter" style={`--index:${index}`}>
            {letter}
          </span>
        ))
      }
    </div>
  </div>
</div>

<script is:inline>
  // Optimized for mobile performance - minimal delay
  const MIN_DURATION = 400; // Reduced from 1500ms to 400ms
  const FAILSAFE_DURATION = 1500; // Reduced from 4000ms to 1500ms
  const overlay = document.querySelector("[data-preloader]");
  const start = performance.now();

  if (overlay) {
    const finish = () => {
      const elapsed = performance.now() - start;
      const remaining = Math.max(0, MIN_DURATION - elapsed);
      window.setTimeout(() => {
        overlay.classList.add("is-leaving");
        overlay.addEventListener(
          "transitionend",
          () => {
            overlay.remove();
          },
          { once: true }
        );
      }, remaining);
    };

    // Start immediately if DOM is ready
    if (document.readyState === "interactive" || document.readyState === "complete") {
      finish();
    } else {
      // Use DOMContentLoaded instead of load for faster initial render
      document.addEventListener("DOMContentLoaded", finish, { once: true });
    }

    // Shorter failsafe timeout
    window.setTimeout(() => {
      if (!overlay.classList.contains("is-leaving")) {
        finish();
      }
    }, FAILSAFE_DURATION);
  }
</script>

