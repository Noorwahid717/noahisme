<style>
  /* component-level styles (variables moved to globals.css) */

  .intro-section {
    position: relative;
    width: 100%;
    min-height: 80vh;
    padding: 6rem 1.5rem;
    background: rgb(var(--color-bg));
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Subtle background pattern */
  .intro-section::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(var(--color-accent), 0.03) 0%,
      transparent 50%,
      rgba(var(--color-accent), 0.05) 100%
    );
    pointer-events: none;
  }

  .intro-container {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    position: relative;
    width: 100%;
  }

  /* Label with decorative lines */
  .intro-label-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    justify-content: center;
  }

  .intro-label-line {
    width: 40px;
    height: 1px;
    background: rgb(var(--color-divider));
  }

  .intro-label {
    font-size: 1rem;
    font-weight: 400;
    color: rgb(var(--color-text-muted));
    margin: 0;
    letter-spacing: 0.02em;
  }

  .intro-label em {
    font-style: italic;
  }

  /* Context label above heading */
  .intro-context-label {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgb(var(--color-accent));
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  /* Main heading wrapper */
  .intro-heading-wrapper {
    width: 100%;
    max-width: 600px;
  }

  .intro-heading {
    font-size: clamp(1.5rem, 3.5vw, 2rem);
    font-weight: 500;
    line-height: 1.6;
    text-align: center;
    color: rgb(var(--color-text));
    margin: 0;
    letter-spacing: -0.02em;
  }

  /* Badges Container */
  /* Columns layout for badges flanking the intro */
  .badges-columns {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: minmax(0, var(--intro-badge-col-left)) minmax(
        0,
        var(--intro-badge-col-center)
      ) minmax(0, var(--intro-badge-col-right));
    align-items: center;
    gap: var(--intro-badge-gap);
    min-height: 420px;
  }

  /* explicit placement so columns never overlap the center content */
  .badges-column.left {
    grid-column: 1;
    justify-self: start;
  }

  .intro-center {
    grid-column: 2;
    align-self: center;
    justify-self: center;
  }

  .badges-column.right {
    grid-column: 3;
    justify-self: end;
  }

  .badges-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--intro-badge-vertical-gap);
    align-items: flex-start;
    width: 100%;
    min-width: 0;
  }

  .badges-column.right {
    align-items: flex-end;
    transform: translateX(160px); /* Geser badge kanan 20px ke kanan */
  }

  /* Ensure badges stay within their column */
  .badges-column .badge-float {
    max-width: 100%;
  }

  .badges-column .badge-inner {
    max-width: 100%;
    box-sizing: border-box;
  }

  .intro-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 600px;
    text-align: center;
    padding: 0 2rem;
    min-width: 0;
  }

  .badge-float {
    position: relative;
    left: auto;
    transform: none;
    pointer-events: auto;
  }

  @media (prefers-reduced-motion: no-preference) {
    .badge-float {
      animation: float 5s ease-in-out infinite;
    }
  }

  /* Individual badge positioning */
  /* animation delays to create stagger effect */
  .badge-1 {
    animation-delay: 0s;
  }
  .badge-2 {
    animation-delay: 0.4s;
  }
  .badge-3 {
    animation-delay: 0.8s;
  }
  .badge-4 {
    animation-delay: 1.2s;
  }
  .badge-5 {
    animation-delay: 1.6s;
  }
  .badge-6 {
    animation-delay: 2s;
  }

  /* Badge inner structure */
  .badge-inner {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    border-radius: 147px;
    background: rgb(var(--color-surface));
    border: 1px solid rgb(var(--color-divider));
    box-shadow:
      rgba(255, 255, 255, 0.25) 0px 0px 0px 8px,
      rgba(0, 0, 0, 0.1) 12px 16px 16px 0px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    user-select: none;
  }

  /* Apply rotation to each badge */
  .badge-1 .badge-inner {
    transform: rotate(4deg);
  }

  .badge-2 .badge-inner {
    transform: rotate(4deg);
  }

  .badge-3 .badge-inner {
    transform: rotate(-4deg);
  }

  .badge-4 .badge-inner {
    transform: rotate(-5deg);
  }

  .badge-5 .badge-inner {
    transform: rotate(-4deg);
  }

  .badge-6 .badge-inner {
    transform: rotate(3deg);
  }

  .badge-float:hover .badge-inner {
    box-shadow:
      rgba(255, 255, 255, 0.35) 0px 0px 0px 10px,
      rgba(0, 0, 0, 0.15) 16px 20px 24px 0px;
  }

  @media (prefers-reduced-motion: no-preference) {
    .badge-1:hover .badge-inner {
      transform: scale(1.05) rotate(4deg);
    }

    .badge-2:hover .badge-inner {
      transform: scale(1.05) rotate(4deg);
    }

    .badge-3:hover .badge-inner {
      transform: scale(1.05) rotate(-4deg);
    }

    .badge-4:hover .badge-inner {
      transform: scale(1.05) rotate(-5deg);
    }

    .badge-5:hover .badge-inner {
      transform: scale(1.05) rotate(-4deg);
    }

    .badge-6:hover .badge-inner {
      transform: scale(1.05) rotate(3deg);
    }
  }

  .badge-icon {
    width: 48px;
    height: 48px;
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.35rem;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.15));
  }

  @media (prefers-reduced-motion: no-preference) {
    .badge-float:hover .badge-icon {
      transform: rotate(5deg) scale(1.05);
    }
  }

  .badge-icon-1 {
    background-color: rgb(255, 213, 0);
  }

  .badge-icon-1 svg {
    color: rgb(71, 71, 71);
  }

  .badge-icon-2 {
    background-color: rgb(71, 71, 71);
  }

  .badge-icon-2 svg {
    color: rgb(186, 255, 208);
  }

  .badge-icon-3 {
    background-color: rgb(255, 69, 171);
  }

  .badge-icon-3 svg {
    color: rgb(201, 255, 251);
  }

  .badge-icon-4 {
    background-color: rgb(82, 255, 105);
  }

  .badge-icon-4 svg {
    color: rgb(50, 36, 255);
  }

  .badge-icon-5 {
    background-color: rgb(5, 169, 255);
  }

  .badge-icon-5 svg {
    color: rgb(248, 255, 191);
  }

  .badge-icon-6 {
    background-color: rgb(255, 94, 0);
  }

  .badge-icon-6 svg {
    color: rgb(255, 243, 194);
  }

  .badge-text {
    font-family: "Inter Display", "Inter", sans-serif;
    font-size: 0.95rem;
    font-weight: 400;
    line-height: 1.7em;
    color: rgb(var(--color-text));
    white-space: nowrap;
    margin: 0;
  }

  /* Floating animation */
  @keyframes float {
    0%,
    100% {
      transform: translateX(-50%) translateY(0px);
    }
    50% {
      transform: translateX(-50%) translateY(-6px);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 968px) {
    /* use global CSS variable overrides for medium screens */
    .badges-columns {
      min-height: auto;
      grid-template-columns: var(--intro-badge-col-left) var(--intro-badge-col-center) var(
          --intro-badge-col-right
        );
      gap: var(--intro-badge-gap);
    }
    .badges-column {
      gap: var(--intro-badge-vertical-gap);
    }
  }

  @media (max-width: 768px) {
    .intro-section {
      min-height: auto;
      padding: 4rem 1.5rem;
    }

    /* mobile: stack everything vertically */
    .badges-columns {
      display: flex;
