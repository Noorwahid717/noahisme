<script>
  function initIntroAnimations() {
    const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;

    if (prefersReducedMotion) {
      // Reveal all badges immediately
      document.querySelectorAll(".badge-float").forEach((badge) => {
        badge.classList.add("revealed");
      });
      return;
    }

    // Scroll reveal for badges
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const badge = entry.target as HTMLElement;
            const delay = parseFloat(badge.dataset.revealDelay || "0");

            setTimeout(() => {
              badge.classList.add("revealed");
            }, delay * 1000);

            observer.unobserve(badge);
          }
        });
      },
      {
        threshold: 0.2,
        rootMargin: "0px 0px -100px 0px",
      }
    );

    document.querySelectorAll(".badge-float").forEach((badge) => {
      observer.observe(badge);
    });

    // Subtle parallax on badges
    const badges = document.querySelectorAll(".badge-float");
    let ticking = false;

    function updateBadgeParallax() {
      const scrollY = window.scrollY;
      const introSection = document.querySelector(".intro-section");

      if (!introSection) return;

      const sectionTop = introSection.getBoundingClientRect().top + scrollY;
      const sectionHeight = introSection.clientHeight;

      badges.forEach((badge, index) => {
        const isLeft = index < 3;
        const speed = isLeft ? 0.05 : -0.05;
        const offset = (scrollY - sectionTop) * speed;

        if (scrollY > sectionTop - window.innerHeight && scrollY < sectionTop + sectionHeight) {
          (badge as HTMLElement).style.setProperty("--parallax-offset", `${offset}px`);
        }
      });

      ticking = false;
    }

    function requestParallaxTick() {
      if (!ticking) {
        requestAnimationFrame(updateBadgeParallax);
        ticking = true;
      }
    }

    window.addEventListener("scroll", requestParallaxTick, { passive: true });
  }

  // Initialize on page load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initIntroAnimations);
  } else {
    initIntroAnimations();
  }
</script>
