<style>
  :root {
    --radius-lg: 18px;
    --radius-pill: 999px;
  }

  /* Particle Canvas */
  #particle-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }

  /* Hero Wrapper */
  .hero-wrapper {
    position: relative;
    z-index: 1;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 3rem 0;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
  }

  /* Hero Grid */
  .hero {
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    gap: 3rem;
    align-items: center;
    padding: 3rem 0;
  }

  /* LEFT SIDE */
  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hero-label {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    color: #6b7280;
    text-transform: uppercase;
  }

  .hero-label-dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: radial-gradient(circle at center, #22c55e, #16a34a);
    box-shadow: 0 0 8px rgba(52, 211, 153, 0.8);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.1);
    }
  }

  .hero-title {
    position: relative;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
  }

  .hero-title-fill {
    display: block;
    position: relative;
    /* radial gradient = pusat terang, pinggir memudar */
    background: radial-gradient(
      circle at 0% 50%,
      #285fb2 0%,
      rgba(40, 95, 178, 0.95) 18%,
      rgba(40, 95, 178, 0.9) 40%,
      rgba(16, 24, 40, 0.75) 70%
    );
    background-size: 220% 220%;
    background-repeat: no-repeat;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: heroBlobFlow 7s ease-in-out infinite alternate;
  }

  /* animasi blob bergerak keliling teks */
  @keyframes heroBlobFlow {
    0% {
      background-position: 0% 50%;
    }
    40% {
      background-position: 50% 0%;
    }
    70% {
      background-position: 100% 60%;
    }
    100% {
      background-position: 50% 100%;
    }
  }

  .hero-title-stroke {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    -webkit-text-stroke: 1px rgba(16, 24, 40, 0.15);
    color: transparent;
    opacity: 0.45;
    user-select: none;
    pointer-events: none;
  }

  .accent {
    /* Keep accent word solid color instead of gradient */
    background: none;
    -webkit-text-fill-color: #285fb2;
    color: #285fb2;
  }

  .hero-subline {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #475569;
    max-width: 36rem;
  }

  .morph-wrapper {
    display: inline-block;
    position: relative;
    font-weight: 600;
    color: rgb(var(--color-accent));
    min-width: 6rem;
    text-align: left;
  }

  .morph-word {
    position: absolute;
    left: 0;
    opacity: 0;
    transition: opacity 600ms ease-in-out;
  }

  .morph-word.active {
    position: relative;
    opacity: 1;
  }

  .hero-cta-row {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .cta-magnetic {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: var(--radius-pill);
    background: rgb(var(--color-accent));
    color: white;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 14px rgba(var(--color-accent), 0.4);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    text-decoration: none;
  }

  .cta-magnetic:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(var(--color-accent), 0.5);
  }

  .cta-letters {
    display: inline-flex;
  }

  .cta-letter {
    display: inline-block;
    transition: transform 0.15s ease-out;
  }

  .cta-icon {
    font-size: 1.25rem;
    transition: transform 0.3s ease;
  }

  .cta-magnetic:hover .cta-icon {
    transform: translate(2px, -2px);
  }

  .cta-secondary-text {
    font-size: 0.875rem;
    color: #64748b;
    cursor: pointer;
    position: relative;
    display: inline-block;
  }

  .cta-secondary-text span {
    position: relative;
    transition: color 0.3s ease;
  }

  .cta-secondary-text span::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: rgb(var(--color-accent));
    transition: width 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .cta-secondary-text:hover span {
    color: rgb(var(--color-accent));
  }

  .cta-secondary-text:hover span::after {
    width: 100%;
  }

