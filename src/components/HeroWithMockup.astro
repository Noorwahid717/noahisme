<script is:inline>
  console.log("üöÄ Hero animations script loaded");

  // Fade in - trigger immediately when DOM is ready
  (function initAnimations() {
    function activateFadeIn() {
      const fadeElements = document.querySelectorAll(".fade-in");
      console.log("‚ú® Fade-in animation: Found", fadeElements.length, "elements");

      fadeElements.forEach((el, index) => {
        requestAnimationFrame(() => {
          el.classList.add("visible");
          console.log(`  ‚úÖ Added 'visible' class to element ${index + 1}`);
        });
      });

      if (fadeElements.length > 0) {
        console.log("üé¨ Fade-in animation activated successfully!");
      } else {
        console.warn("‚ö†Ô∏è No .fade-in elements found!");
      }
    }

    // Try multiple triggers to ensure it runs
    if (document.readyState === "loading") {
      console.log("‚è≥ Waiting for DOMContentLoaded...");
      document.addEventListener("DOMContentLoaded", activateFadeIn);
    } else {
      console.log("‚úÖ DOM already loaded, activating immediately");
      activateFadeIn();
    }
  })();

  // Animated blob gradient text
  (function blobGradientText() {
    const titleFill = document.querySelector(".hero-title-fill");
    if (!titleFill) {
      console.warn("‚ö†Ô∏è Hero title not found!");
      return;
    }

    console.log("‚ú® Blob gradient text initialized");
    console.log("üé¨ Animation: heroBlobFlow 7s infinite alternate");
  })();

  // Text morphing (fade only)
  (function textMorph() {
    const words = Array.from(document.querySelectorAll(".morph-word"));
    console.log("üîÑ Text morphing: Found", words.length, "words");

    if (!words.length) {
      console.warn("‚ö†Ô∏è No .morph-word elements found!");
      return;
    }

    let index = 0;
    console.log(
      "üé¨ Text morphing started! Words:",
      words.map((w) => w.textContent)
    );

    setInterval(() => {
      const prev = words[index];
      index = (index + 1) % words.length;
      const next = words[index];
      prev.classList.remove("active");
      next.classList.add("active");
      console.log(`  üîÑ Morphed to: "${next.textContent}"`);
    }, 2200);
  })();

  // Particle background
  (function particles() {
    const canvas = document.getElementById("particle-canvas");
    if (!canvas) {
      console.warn("‚ö†Ô∏è Particle canvas not found!");
      return;
    }
    console.log("‚ú® Particle canvas found");

    const ctx = canvas.getContext("2d");
    if (!ctx) {
      console.warn("‚ö†Ô∏è Could not get canvas context!");
      return;
    }
    console.log("üé® Canvas context ready");

    let particles = [];
    let width, height;

    function resize() {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
      particles = [];
      const count = Math.min(80, Math.floor((width * height) / 26000));
      for (let i = 0; i < count; i++) {
        particles.push({
          x: Math.random() * width,
          y: Math.random() * height,
          vx: (Math.random() - 0.5) * 0.3,
          vy: (Math.random() - 0.5) * 0.3,
          r: Math.random() * 1.6 + 0.6,
          alpha: Math.random() * 0.6 + 0.2,
        });
      }
      console.log("üåü Particles initialized:", count, "particles");
    }

    window.addEventListener("resize", resize);
    resize();
    console.log("üé¨ Particle animation started!");

    function tick() {
      if (!ctx) return;
      ctx.clearRect(0, 0, width, height);
      ctx.globalCompositeOperation = "lighter";

      particles.forEach((p) => {
        p.x += p.vx;
        p.y += p.vy;

        if (p.x < 0 || p.x > width) p.vx *= -1;
        if (p.y < 0 || p.y > height) p.vy *= -1;

        ctx.beginPath();
        const g = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.r * 4);
        g.addColorStop(0, `rgba(37,99,235,${p.alpha})`);
        g.addColorStop(1, "rgba(249,250,251,0)");
        ctx.fillStyle = g;
        ctx.arc(p.x, p.y, p.r * 3.5, 0, Math.PI * 2);
        ctx.fill();
      });

      requestAnimationFrame(tick);
    }

    tick();
  })();

  // Magnetic letters CTA
  (function magneticCTA() {
    const button = document.getElementById("ctaButton");
    const lettersContainer = document.getElementById("ctaLetters");

    if (!button || !lettersContainer) {
      console.warn("‚ö†Ô∏è CTA button or letters container not found!");
      return;
    }
    console.log("üß≤ Magnetic CTA found");

    const text = lettersContainer.textContent || "";
    lettersContainer.textContent = "";
    const spans = [];

    for (let char of text) {
      const span = document.createElement("span");
      span.textContent = char;
      span.classList.add("cta-letter");
      lettersContainer.appendChild(span);
      spans.push(span);
    }

    console.log("üî§ Magnetic letters created:", spans.length, "letters");

    let rect = null;
    function updateRect() {
      rect = button.getBoundingClientRect();
    }
    updateRect();
    window.addEventListener("resize", updateRect);

    const strength = 18;
    console.log("üé¨ Magnetic CTA animation ready!");

    button.addEventListener("mousemove", (e) => {
      if (!rect) return;
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      spans.forEach((span) => {
        const r = span.getBoundingClientRect();
        const sx = r.left - rect.left + r.width / 2;
        const sy = r.top - rect.top + r.height / 2;

        const dx = x - sx;
        const dy = y - sy;
        const dist = Math.max(Math.sqrt(dx * dx + dy * dy), 1);
        const force = Math.max((strength * 1.3 - dist) / strength, 0);

        const offsetX = (dx / dist) * force * 6;
        const offsetY = (dy / dist) * force * 6;
        span.style.transform = `translate(${offsetX}px, ${offsetY}px)`;
      });
    });

    button.addEventListener("mouseleave", () => {
      spans.forEach((span) => {
        span.style.transform = "translate(0,0)";
      });
    });
  })();
