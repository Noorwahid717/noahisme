---
import ThemeToggle from "./ThemeToggle";
import VolumeControl from "./VolumeControl";
import CTAButton from "./CTAButton";
import { trackEvent } from "~/lib/analytics";

const links = [
  { href: "/#projects", label: "Proyek" },
  { href: "/about", label: "Tentang" },
  { href: "/projects", label: "Studi kasus" },
  { href: "/contact", label: "Kontak" },
];
---

<nav class="sticky top-0 z-50 border-b border-divider/50 bg-bg/80 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-6 px-6 py-4 text-sm">
    <a
      class="focus-outline flex items-center gap-2 font-heading text-lg font-semibold"
      href="/"
      aria-label="Beranda Noah Isme"
    >
      <span
        class="flex h-10 w-10 items-center justify-center rounded-md border border-divider bg-surface font-heading text-base"
        >NI</span
      >
      <span class="hidden sm:inline-block tracking-tight text-text">Noah Isme</span>
    </a>
    <div class="hidden items-center gap-6 md:flex">
      {
        links.map((link) => (
          <a class="focus-outline text-text2 transition hover:text-text" href={link.href}>
            {link.label}
          </a>
        ))
      }
      <CTAButton
        client:load
        className="ml-2"
        href="/contact"
        onClick={() => trackEvent("cta_nav_contact")}
      >
        Ajak Kolaborasi
      </CTAButton>
    </div>
    <div class="flex items-center gap-3">
      <VolumeControl client:only="react" />
      <ThemeToggle client:only="react" />
    </div>
  </div>
</nav>
