<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes cursor-blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-cursor-blink {
    animation: cursor-blink 600ms step-end infinite;
  }

  /* Role container with fixed width to prevent layout shift */
  :global(.role-container) {
    width: 11.5em;
    min-width: 11.5em;
    text-align: left;
  }

  @media (min-width: 640px) {
    :global(.role-container) {
      width: 10em;
      min-width: 10em;
    }
  }

  @media (min-width: 768px) {
    :global(.role-container) {
      width: 9.5em;
      min-width: 9.5em;
    }
  }

  /* CTA styling */
  :global(.hero-cta-primary) {
    background: linear-gradient(135deg, rgb(37, 99, 235) 0%, rgb(29, 78, 216) 100%) !important;
    color: white !important;
    font-weight: 600 !important;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1) !important;
    box-shadow: 0 4px 14px -2px rgba(37, 99, 235, 0.3) !important;
  }

  :global(.hero-cta-secondary) {
    color: rgb(var(--color-text-muted)) !important;
    border-color: rgb(var(--color-divider)) !important;
    transition: all 0.2s ease !important;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in {
      animation: none;
      opacity: 1;
      transform: none;
    }
    .animate-cursor-blink {
      animation: none;
      opacity: 1;
    }
  }
</style>

<!-- Role Rotator Animation Script with layout-shift mitigation -->
<script>
  if (typeof window !== "undefined") {
    const initRoleRotator = () => {
      const roleElement = document.getElementById("role-text");
      const cursorElement = document.getElementById("role-cursor");
      const roleContainer = document.getElementById("role-container");

      if (!roleElement || !cursorElement || !roleContainer) return;

      // Responsive fixed container widths to avoid layout shift
      const updateContainerWidth = () => {
        const width = window.innerWidth;
        if (width >= 768) {
          roleContainer.style.width = "9.5em";
          roleContainer.style.minWidth = "9.5em";
        } else if (width >= 640) {
          roleContainer.style.width = "10em";
          roleContainer.style.minWidth = "10em";
        } else {
          roleContainer.style.width = "11.5em";
          roleContainer.style.minWidth = "11.5em";
        }
      };

      updateContainerWidth();
      window.addEventListener("resize", updateContainerWidth);

      // Respect reduced motion
      const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
      if (prefersReducedMotion) {
        roleElement.textContent = "Cepat";
        cursorElement.style.display = "none";
        return;
      }

      const roles = ["Cepat", "Kuat", "Cermat"];

      const typeSpeed = 150; // ms per char
      const eraseSpeed = 100; // ms per char
      const delayBetween = 2000; // pause after full word
      const maxLoops = 4; // stop after cycles

      let roleIndex = 0;
      let charIndex = 0;
      let isDeleting = false;
      let loopCount = 0;

      // start empty to type in
      roleElement.textContent = "";

      function type() {
        if (loopCount >= maxLoops && roleIndex === 0 && charIndex === 0 && !isDeleting) {
          roleElement.textContent = roles[0];
          cursorElement.style.opacity = "0";
          return;
        }

        const current = roles[roleIndex];

        if (isDeleting) {
          roleElement.textContent = current.substring(0, charIndex - 1);
          charIndex--;
          if (charIndex === 0) {
            isDeleting = false;
            roleIndex = (roleIndex + 1) % roles.length;
            if (roleIndex === 0) loopCount++;
            // fade out any glow effects externally if present (no-op here)
            setTimeout(type, delayBetween);
            return;
          }
        } else {
          roleElement.textContent = current.substring(0, charIndex + 1);
          charIndex++;
          if (charIndex === 1) {
            // could trigger glow fade-in if implemented
          }
          if (charIndex === current.length) {
            isDeleting = true;
            setTimeout(type, delayBetween);
            return;
          }
        }

        const speed = isDeleting ? eraseSpeed : typeSpeed;
        setTimeout(type, speed);
      }

      // Start after initial fade-in
      setTimeout(() => type(), 800);
    };

    if ("requestIdleCallback" in window) {
      requestIdleCallback(initRoleRotator);
    } else {
      setTimeout(initRoleRotator, 100);
    }
  }
</script>
