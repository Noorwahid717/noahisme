---
import ScrollReveal from "~/components/ScrollReveal.astro";

interface Props {
  id?: string;
  title: string;
  eyebrow?: string;
  description?: string;
}
const { id, title, eyebrow, description } = Astro.props;
---

<section id={id} class="relative py-24">
  <div class="mx-auto max-w-6xl px-6">
    <div class="flex flex-col gap-12 md:flex-row md:items-end md:justify-between">
      <div class="max-w-2xl space-y-4">
        {
          eyebrow && (
            <ScrollReveal animation="fade-up" delay={100}>
              <p class="text-xs uppercase tracking-[0.35em] text-accent">{eyebrow}</p>
            </ScrollReveal>
          )
        }
        <ScrollReveal animation="fade-up" delay={200}>
          <h2 class="font-heading text-3xl font-semibold tracking-tight text-text md:text-4xl">
            {title}
          </h2>
        </ScrollReveal>
        {
          description && (
            <ScrollReveal animation="fade-up" delay={300}>
              <p class="text-base text-text2">{description}</p>
            </ScrollReveal>
          )
        }
      </div>
      <div class="hidden h-12 w-36 -translate-y-4 rounded-full bg-accent/10 blur-2xl md:block">
      </div>
    </div>
    <div class="mt-12 space-y-12">
      <slot />
    </div>
  </div>
  <div
    class="pointer-events-none absolute inset-x-6 bottom-0 h-px max-w-6xl mx-auto bg-gradient-to-r from-transparent via-divider/60 to-transparent"
  >
  </div>
</section>
