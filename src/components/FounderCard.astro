<style>
  .founder-card {
    position: relative;
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
  }

  .founder-card-wrapper {
    position: relative;
  }

  .founder-card-inner {
    position: relative;
    background: rgb(var(--color-surface));
    border: 1px solid rgb(var(--color-divider));
    border-radius: clamp(20px, 3vw, 32px);
    padding: clamp(1rem, 2vw, 1.5rem);
    box-shadow:
      0 8px 20px rgba(0, 0, 0, 0.08),
      0 4px 12px rgba(var(--color-accent), 0.06);
    transform: rotate(-2deg);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform;
  }

  .founder-photo {
    width: 100%;
    height: auto;
    aspect-ratio: 3/4;
    object-fit: cover;
    border-radius: clamp(12px, 2vw, 20px);
    filter: grayscale(100%) contrast(1.05);
    transition: filter 0.4s ease;
    display: block;
  }

  /* Photo caption */
  .photo-caption {
    margin-top: 1rem;
    font-size: 0.8125rem;
    font-style: italic;
    color: rgb(var(--color-text2));
    text-align: center;
    line-height: 1.5;
    opacity: 0.8;
  }

  .founder-identity {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
    margin-top: 1.5rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .founder-name {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: rgb(var(--color-text));
    margin: 0;
    text-align: right;
  }

  .founder-social {
    display: flex;
    gap: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: transparent;
    color: rgb(var(--color-text-muted));
    transition: all 0.3s ease;
  }

  .social-link:hover {
    color: rgb(var(--color-accent));
    background: rgb(var(--color-accent) / 0.1);
  }

  .founder-role {
    font-size: clamp(0.8125rem, 1.5vw, 0.9375rem);
    color: rgb(var(--color-text-muted));
    margin: 0;
    text-align: right;
  }

  .founder-card:hover .founder-card-inner {
    transform: rotate(-1deg) scale(1.02);
    border-color: rgb(var(--color-accent) / 0.3);
    box-shadow:
      0 8px 20px rgba(var(--color-accent), 0.1),
      0 16px 40px rgba(var(--color-accent), 0.08);
  }

  .founder-card:hover .founder-photo {
    filter: grayscale(10%) contrast(1.08);
  }

  @media (min-width: 768px) {
    .founder-card {
      margin: 0;
      position: sticky;
      top: 8rem;
    }
  }

  @media (max-width: 767px) {
    .founder-card-inner {
      transform: rotate(-1deg);
      padding: clamp(0.875rem, 2vw, 1.25rem);
    }

    .founder-card:hover .founder-card-inner {
      transform: rotate(0deg) scale(1.01);
    }

    .founder-identity {
      align-items: center;
    }

    .founder-name,
    .founder-role {
      text-align: center;
    }
  }
</style>

<script>
  // Subtle parallax effect for founder card
  function initFounderParallax() {
    const founderCard = document.querySelector("[data-parallax]") as HTMLElement;
    if (!founderCard) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    if (prefersReducedMotion) return;

    const handleScroll = () => {
      const rect = founderCard.getBoundingClientRect();
      const windowHeight = window.innerHeight;

      // Only apply parallax when card is in viewport
      if (rect.top < windowHeight && rect.bottom > 0) {
        const scrollProgress = (windowHeight - rect.top) / (windowHeight + rect.height);
        const offset = scrollProgress * 30; // Subtle movement
        founderCard.style.transform = `translateY(${offset}px)`;
      }
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
    handleScroll(); // Initial calculation
  }

  // Initialize on load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initFounderParallax);
  } else {
    initFounderParallax();
  }
</script>
