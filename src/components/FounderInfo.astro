---
// Founder information with description and timeline
import ScrollReveal from "./ScrollReveal.astro";
---

<div class="founder-info">
  <div class="founder-content">
    <!-- Bio section with emoji -->
    <ScrollReveal animation="fade-up" delay={100}>
      <div class="founder-bio">
        <h4 class="founder-description">
          Noah adalah pengembang full-stack dari Kudus, Indonesia — menggabungkan struktur teknis
          dan sisi kreatif untuk menciptakan pengalaman digital yang alami, berguna, dan terasa
          dekat dengan pengguna.
        </h4>
        <div class="founder-emoji" aria-hidden="true">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 256 256"
            fill="currentColor"
            width="32"
            height="32"
          >
            <path
              d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216ZM80,108a12,12,0,1,1,12,12A12,12,0,0,1,80,108Zm96,0a12,12,0,1,1-12-12A12,12,0,0,1,176,108Zm-1.07,48c-10.29,17.79-27.4,28-46.93,28s-36.63-10.2-46.92-28a8,8,0,1,1,13.84-8c7.47,12.91,19.21,20,33.08,20s25.61-7.1,33.07-20a8,8,0,0,1,13.86,8Z"
            ></path>
          </svg>
        </div>
      </div>
    </ScrollReveal>

    <!-- Experience timeline -->
    <div class="founder-timeline" id="experience">
      <ScrollReveal animation="fade-up" delay={200}>
        <div class="timeline-row">
          <span class="timeline-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 256 256"
              class="text-sky-600"
            >
              <path
                d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216ZM128,72a12,12,0,1,1-12,12A12,12,0,0,1,128,72Zm0,48a8,8,0,0,0-8,8v40a8,8,0,0,0,16,0V128A8,8,0,0,0,128,120Z"
              ></path>
            </svg>
          </span>
          <span class="timeline-label">Pendiri</span>
          <span class="timeline-value">Noah Is Me</span>
          <span class="timeline-date">2024 – Now</span>
        </div>
      </ScrollReveal>
      <ScrollReveal animation="fade-up" delay={300}>
        <div class="timeline-row">
          <span class="timeline-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 256 256"
              class="text-slate-700"
            >
              <path
                d="M216,56H180V48a28,28,0,0,0-28-28H104A28,28,0,0,0,76,48v8H40A16,16,0,0,0,24,72V200a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V72A16,16,0,0,0,216,56ZM104,36h48a12,12,0,0,1,12,12v8H92V48A12,12,0,0,1,104,36ZM40,72H216V96H40ZM216,200H40V112H216v88Z"
              ></path>
            </svg>
          </span>
          <span class="timeline-label">Developer</span>
          <span class="timeline-value">PT Buroq Sakti Terbang</span>
          <span class="timeline-date">2024 – now</span>
        </div>
      </ScrollReveal>
      <ScrollReveal animation="fade-up" delay={400}>
        <div class="timeline-row">
          <span class="timeline-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 256 256"
              class="text-emerald-600"
            >
              <path
                d="M152,224a8,8,0,0,1-8,8H112a8,8,0,0,1,0-16h32A8,8,0,0,1,152,224ZM128,112a12,12,0,1,0-12-12A12,12,0,0,0,128,112Zm95.62,43.83-12.36,55.63a16,16,0,0,1-25.51,9.11L158.51,200h-61L70.25,220.57a16,16,0,0,1-25.51-9.11L32.38,155.83a16.09,16.09,0,0,1,3.32-13.71l28.56-34.26a123.07,123.07,0,0,1,8.57-36.67c12.9-32.34,36-52.63,45.37-59.85a16,16,0,0,1,19.6,0c9.34,7.22,32.47,27.51,45.37,59.85a123.07,123.07,0,0,1,8.57,36.67l28.56,34.26A16.09,16.09,0,0,1,223.62,155.83ZM99.43,184h57.14c21.12-37.54,25.07-73.48,11.74-106.88C156.55,47.64,134.49,29,128,24c-6.51,5-28.57,23.64-40.33,53.12C74.36,110.52,78.31,146.46,99.43,184Zm-15,5.85Q68.28,160.5,64.83,132.16L48,152.36,60.36,208l.18-.13ZM208,152.36l-16.83-20.2q-3.42,28.28-19.56,57.69l23.85,18,.18.13Z"
              ></path>
            </svg>
          </span>
          <span class="timeline-label">Proyek</span>
          <span class="timeline-value">GEMA LMS</span>
          <span class="timeline-date">2022 – now</span>
        </div>
      </ScrollReveal>
      <ScrollReveal animation="fade-up" delay={500}>
        <div class="timeline-row">
          <span class="timeline-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 256 256"
              class="text-indigo-600"
            >
              <path
                d="M176,207.24a119.79,119.79,0,0,0,16-7.73V240a8,8,0,0,1-16,0Zm40-54.41a8,8,0,0,0-8,8V240a8,8,0,0,0,16,0V160.83A8,8,0,0,0,216,152.83ZM96,175.94a119.79,119.79,0,0,0,16,7.73V240a8,8,0,0,1-16,0ZM80,160.83a8,8,0,0,0-8,8V240a8,8,0,0,0,16,0V168.83A8,8,0,0,0,80,160.83Zm120-53.16A103.26,103.26,0,0,1,128,128h0A103.26,103.26,0,0,1,56,107.67V96c0-48,40-88.72,88-96a104.15,104.15,0,0,1,56,96ZM40,160v40H24a8,8,0,0,1-8-8V168a8,8,0,0,1,8-8Zm192,0h16a8,8,0,0,1,8,8v24a8,8,0,0,1-8,8H232Z"
              ></path>
            </svg>
          </span>
          <span class="timeline-label">Pendidikan</span>
          <span class="timeline-value">Universitas Wahidiyah</span>
          <span class="timeline-date">2020 – 2024</span>
        </div>
      </ScrollReveal>
    </div>

    <!-- CTA below timeline -->
    <ScrollReveal animation="fade-up" delay={600}>
      <a href="/contact" class="founder-cta">
        <span class="cta-text">Mari berkolaborasi</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="cta-arrow"
          width="20"
          height="20"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </ScrollReveal>
  </div>
</div>

<style>
  .founder-info {
    width: 100%;
  }

  .founder-content {
    display: flex;
    flex-direction: column;
    gap: clamp(2rem, 4vw, 3rem);
  }

  .founder-bio {
    position: relative;
  }

  .founder-description {
    font-family: var(--font-heading, "Satoshi", "Inter", sans-serif);
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: 400;
    line-height: 1.5;
    color: rgb(var(--color-text));
    max-width: 42rem;
    margin: 0;
  }

  .founder-emoji {
    display: inline-flex;
    margin-top: 1.5rem;
    color: rgb(var(--color-accent));
  }

  .founder-timeline {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: 1rem;
  }

  .timeline-row {
    display: grid;
    grid-template-columns: 2rem minmax(100px, 120px) 1fr minmax(120px, 150px);
    gap: clamp(0.75rem, 1.5vw, 1.5rem);
    padding: clamp(1rem, 2vw, 1.25rem) 0.5rem;
    border-bottom: 1px solid rgb(var(--color-divider));
    font-size: clamp(0.875rem, 1.5vw, 1rem);
    align-items: center;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    border-radius: 8px;
  }

  .timeline-row:first-child {
    border-top: 1px solid rgb(var(--color-divider));
  }

  .timeline-row:hover {
    background: rgb(var(--color-accent) / 0.05);
    padding-left: 1rem;
    padding-right: 1rem;
    margin-left: -0.5rem;
    margin-right: -0.5rem;
    border-color: rgb(var(--color-accent) / 0.2);
  }

  .timeline-icon {
    font-size: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .timeline-label {
    font-weight: 400;
    color: rgb(var(--color-text));
    font-size: clamp(0.875rem, 1.4vw, 1rem);
  }

  .timeline-value {
    font-weight: 400;
    color: rgb(var(--color-text));
  }

  .timeline-date {
    color: rgb(var(--color-text-muted));
    text-align: right;
    font-size: clamp(0.875rem, 1.4vw, 1rem);
  }

  /* CTA Button */
  .founder-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 2rem;
    padding: 1rem 1.75rem;
    background: rgb(var(--color-accent));
    color: white;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 12px rgba(var(--color-accent), 0.25);
  }

  .founder-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(var(--color-accent), 0.35);
  }

  .cta-arrow {
    transition: transform 0.3s ease;
  }

  .founder-cta:hover .cta-arrow {
    transform: translateX(4px);
  }

  @media (max-width: 767px) {
    .founder-description {
      text-align: center;
      margin: 0 auto;
    }

    .founder-emoji {
      display: flex;
      justify-content: center;
      width: 100%;
    }

    .timeline-row {
      grid-template-columns: 2rem 1fr;
      gap: 0.5rem;
      padding: 1rem 0.5rem;
      text-align: left;
    }

    .timeline-icon {
      grid-row: 1 / 4;
      align-self: start;
    }

    .timeline-label {
      grid-column: 2;
      font-weight: 500;
    }

    .timeline-value {
      grid-column: 2;
    }

    .timeline-date {
      grid-column: 2;
      text-align: left;
    }

    .founder-cta {
      width: 100%;
      justify-content: center;
    }

    .timeline-date {
      text-align: center;
      margin-top: 0.25rem;
    }
  }

  @media (max-width: 560px) {
    .timeline-row {
      grid-template-columns: minmax(80px, 100px) 1fr;
      gap: 0.75rem;
      text-align: left;
    }

    .timeline-date {
      grid-column: 1 / -1;
      text-align: left;
      margin-top: 0.125rem;
      padding-left: 0;
      font-size: 0.8125rem;
      color: rgb(var(--color-text-muted));
    }
  }
</style>
