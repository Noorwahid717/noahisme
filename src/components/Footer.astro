---
import CTAButton from "./CTAButton";
import WaveDivider from "./WaveDivider.astro";
---

<!-- Wave transition before footer -->
<WaveDivider variant="top" color="accent" opacity={0.06} />

<footer class="relative overflow-hidden bg-gradient-to-b from-[#F8FAFC] via-[#FAFBFC] to-[#EFF6FF]">
  <!-- Decorative gradient blobs -->
  <div
    aria-hidden="true"
    class="pointer-events-none absolute -left-20 top-0 h-40 w-40 rounded-full bg-accent/5 blur-3xl"
  >
  </div>
  <div
    aria-hidden="true"
    class="pointer-events-none absolute -right-20 bottom-0 h-40 w-40 rounded-full bg-accent/5 blur-3xl"
  >
  </div>

  <div
    class="relative mx-auto flex max-w-6xl flex-col gap-12 px-6 py-16 text-sm text-text2 md:flex-row md:justify-between md:py-20"
  >
    <!-- Left Section: CTA -->
    <div class="max-w-lg space-y-6">
      <div class="space-y-4">
        {/* Emotional Hook */}
        <p class="text-sm font-medium uppercase tracking-wider text-accent">
          Let's Create Together
        </p>
        <p class="font-heading text-3xl font-semibold leading-tight text-text md:text-4xl">
          Mari bangun sesuatu yang luar biasa.
        </p>
        <p class="text-base leading-relaxed text-text/80">
          Let's craft digital experiences that matter — clean, fast, and human-centered.
        </p>
        <p class="text-base leading-relaxed text-text2">
          Tertarik berkolaborasi? Saya terbuka untuk diskusi proyek, konsultasi teknis, atau sekadar
          ngobrol tentang teknologi dan arsitektur software.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap items-center gap-3">
        <CTAButton client:load href="/contact" variant="primary" className="group w-fit">
          <span class="inline-flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 256 256"
              class="transition-all group-hover:scale-110"
            >
              <path
                d="M216,48H40A16,16,0,0,0,24,64V224a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V64A16,16,0,0,0,216,48Zm0,16V152.89l-37.65-37.66a16,16,0,0,0-22.63,0L115.31,155.63l-19-19a16,16,0,0,0-22.63,0L40,170.34V64ZM40,224V190.63l52.69-52.69,20.69,20.69a16,16,0,0,0,22.63,0l40.69-40.69,22.63-22.63L216,112.46V224Z"
              ></path>
            </svg>
            Hubungi
          </span>
        </CTAButton>
        <CTAButton client:load href="/about" variant="ghost" className="w-fit">
          Tentang Saya
        </CTAButton>
      </div>

      <!-- Quick Stats -->
      <div class="flex flex-wrap gap-6 pt-4 text-xs">
        <div class="flex items-center gap-2">
          <span class="flex h-2 w-2 rounded-full bg-success/80"></span>
          <span class="text-text2">3+ tahun pengalaman</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="flex h-2 w-2 rounded-full bg-accent/80"></span>
          <span class="text-text2">Full-Stack Developer</span>
        </div>
      </div>
    </div>

    <!-- Right Section: Contact & Links -->
    <div class="grid gap-8 text-text2 md:text-right">
      <!-- Contact -->
      <div class="space-y-3">
        <span class="text-xs uppercase tracking-[0.35em] text-accent">Kontak</span>
        <a
          class="focus-outline group inline-flex items-center gap-2 text-base text-text transition-all duration-200 hover:text-accent md:justify-end"
          href="mailto:noorwahid717@gmail.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            viewBox="0 0 256 256"
            class="transition-transform group-hover:scale-110"
          >
            <path
              d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48ZM98.71,128,40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05,58,53.15H52.57ZM157.29,128,216,74.18V181.82Z"
            ></path>
          </svg>
          <span class="font-medium">noorwahid717@gmail.com</span>
        </a>
      </div>

      <!-- Social Links -->
      <div class="space-y-3">
        <span class="text-xs uppercase tracking-[0.35em] text-accent">Jejak Digital</span>
        <div class="flex flex-col gap-3 text-text md:items-end">
          <a
            class="social-link social-link-github focus-outline group inline-flex items-center gap-2 text-text2 transition-all duration-300 hover:translate-x-[-4px] md:hover:translate-x-[4px]"
            href="https://github.com/noah-isme"
            rel="noreferrer"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 256 256"
              class="transition-all duration-300 group-hover:scale-110 group-hover:rotate-12"
            >
              <path
                d="M216,104v8a56.06,56.06,0,0,1-48.44,55.47A39.8,39.8,0,0,1,176,192v40a8,8,0,0,1-8,8H104a8,8,0,0,1-8-8V216H72a40,40,0,0,1-40-40A24,24,0,0,0,8,152a8,8,0,0,1,0-16,40,40,0,0,1,40,40,24,24,0,0,0,24,24H96v-8a39.8,39.8,0,0,1,8.44-24.53A56.06,56.06,0,0,1,56,112v-8a58.14,58.14,0,0,1,7.69-28.32A59.78,59.78,0,0,1,69.07,28,8,8,0,0,1,76,24a59.75,59.75,0,0,1,48,24h24a59.75,59.75,0,0,1,48-24,8,8,0,0,1,6.93,4,59.74,59.74,0,0,1,5.37,47.68A58,58,0,0,1,216,104Z"
              ></path>
            </svg>
            <span class="font-medium">GitHub</span>
          </a>
          <a
            class="social-link social-link-instagram focus-outline group inline-flex items-center gap-2 text-text2 transition-all duration-300 hover:translate-x-[-4px] md:hover:translate-x-[4px]"
            href="https://www.instagram.com/__noah_is_me/"
            rel="noreferrer"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 256 256"
              class="transition-all duration-300 group-hover:scale-110 group-hover:rotate-12"
            >
              <path
                d="M176,24H80A56.06,56.06,0,0,0,24,80v96a56.06,56.06,0,0,0,56,56h96a56.06,56.06,0,0,0,56-56V80A56.06,56.06,0,0,0,176,24ZM128,176a48,48,0,1,1,48-48A48.05,48.05,0,0,1,128,176Zm60-96a12,12,0,1,1,12-12A12,12,0,0,1,188,80Zm-28,48a32,32,0,1,1-32-32A32,32,0,0,1,160,128Z"
