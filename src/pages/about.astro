---
import Base from "~/layouts/Base.astro";
import WaveDivider from "~/components/WaveDivider.astro";
import { SITE } from "~/lib/seo";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  name: "Tentang",
  url: `${SITE.url}/about`,
  description: "Profil profesional Noah Is Me sebagai Full-Stack Web Developer.",
};

const skills = [
  {
    icon: "‚öôÔ∏è",
    title: "Backend Development",
    items: ["Node.js, FastAPI, Golang", "REST API & GraphQL", "Worker orchestration"],
  },
  {
    icon: "üé®",
    title: "Frontend Development",
    items: ["React, Next.js, Astro", "Performance optimization", "Accessibility (WCAG)"],
  },
  {
    icon: "üóÑÔ∏è",
    title: "Database & Infrastructure",
    items: ["PostgreSQL, Redis, Supabase", "Vercel, Railway deployment", "Docker containerization"],
  },
  {
    icon: "üîß",
    title: "Development Practices",
    items: ["Testing & QA", "CI/CD pipelines", "Observability & monitoring"],
  },
];

const timeline = [
  {
    year: "2023‚Äì2024",
    role: "Web Developer",
    company: "PT Buroq Sakti Terbang",
    description:
      "Membangun dan memelihara aplikasi full-stack dengan REST API, integrasi Google Maps, dan WhatsApp Business automation.",
  },
  {
    year: "2024‚ÄìNow",
    role: "Project Lead & Developer",
    company: "GEMA (Generasi Muda Informatika)",
    description:
      "Platform LMS pembelajaran informatika dengan coding lab interaktif, auto-grading system, multi-bahasa pemrograman, dan dashboard analytics komprehensif untuk siswa SMA.",
  },
  {
    year: "2022‚Äì2023",
    role: "Freelance Developer",
    company: "POS & Admin Panel Projects",
    description: "Implementasi modul transaksi, RBAC, dan sistem manajemen untuk sekolah & retail.",
  },
  {
    year: "2020‚Äì2022",
    role: "Open Source Contributor",
    company: "Various Projects",
    description: "Fokus pada tooling, integrasi layanan, dan kontribusi ke komunitas developer.",
  },
