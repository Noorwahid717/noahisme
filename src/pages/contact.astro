---
import Base from "~/layouts/Base.astro";
import CTAButton from "~/components/CTAButton";
import { SITE } from "~/lib/seo";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  name: "Kontak",
  description: "Hubungi saya untuk kolaborasi produk digital, audit aksesibilitas, atau konsultasi animasi.",
  url: `${SITE.url}/contact`,
};
---

<Base
  title="Kontak"
  description="Hubungi saya untuk kolaborasi produk digital, audit aksesibilitas, atau konsultasi animasi."
  structuredData={structuredData}
  breadcrumbs={[{ name: "Kontak", url: "/contact" }]}
>
  <section class="mx-auto grid max-w-4xl gap-10 px-6 pb-24 pt-28">
    <header class="space-y-4">
      <p class="text-xs uppercase tracking-[0.3em] text-accent">Kontak</p>
      <h1 class="font-heading text-4xl text-text">Mari bangun hal yang berdampak</h1>
      <p class="max-w-2xl text-base text-text2">
        Isi formulir berikut atau hubungi langsung melalui:
      </p>
      <div class="flex flex-wrap gap-4 text-sm">
        <a
          class="focus-outline inline-flex items-center gap-2 text-text2 transition-colors hover:text-accent"
          href="mailto:noorwahid717@gmail.com"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
          <span>noorwahid717@gmail.com</span>
        </a>
        <a
          class="focus-outline inline-flex items-center gap-2 text-text2 transition-colors hover:text-accent"
          href="https://wa.me/6281335843507"
          target="_blank"
          rel="noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
          </svg>
          <span>WhatsApp</span>
        </a>
        <a
          class="focus-outline inline-flex items-center gap-2 text-text2 transition-colors hover:text-accent"
          href="https://instagram.com/__noah_is_me"
          target="_blank"
          rel="noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
          <span>Instagram</span>
        </a>
      </div>
      <p class="text-sm text-text2">Saya akan merespons dalam 1â€“2 hari kerja.</p>
    </header>
    <form
      class="grid gap-6 rounded-3xl border border-divider/40 bg-surface/80 p-8 shadow-soft"
      method="post"
      action="https://formsubmit.co/noorwahid717@gmail.com"
    >
      <input type="hidden" name="_next" value="https://noahisme.vercel.app/contact?success=true" />
      <input type="text" name="company" class="hidden" aria-hidden="true" tabindex="-1" />
      <div class="grid gap-2">
        <label class="text-sm font-medium text-text" for="name">Nama</label>
        <input
          class="focus-outline rounded-md border border-divider/60 bg-bg/80 px-4 py-3 text-sm text-text"
          type="text"
          id="name"
          name="name"
          required
          autocomplete="name"
        />
      </div>
      <div class="grid gap-2">
        <label class="text-sm font-medium text-text" for="email">Email</label>
        <input
          class="focus-outline rounded-md border border-divider/60 bg-bg/80 px-4 py-3 text-sm text-text"
          type="email"
          id="email"
          name="email"
          required
          autocomplete="email"
        />
      </div>
      <div class="grid gap-2">
        <label class="text-sm font-medium text-text" for="subject">Subjek</label>
        <input
          class="focus-outline rounded-md border border-divider/60 bg-bg/80 px-4 py-3 text-sm text-text"
          type="text"
          id="subject"
          name="subject"
          required
        />
      </div>
      <div class="grid gap-2">
        <label class="text-sm font-medium text-text" for="message">Pesan</label>
        <textarea
          class="focus-outline min-h-[160px] rounded-md border border-divider/60 bg-bg/80 px-4 py-3 text-sm text-text"
          id="message"
          name="message"
          required></textarea>
      </div>
      <CTAButton client:load type="submit"> Kirim pesan </CTAButton>
    </form>
  </section>
</Base>
